{
  "name": "backend-architecture-nodejs",
  "version": "1.0.0",
  "author": "Nestor Cortina",
  "description": "",
  "main": "server.js",
  "engines": {
    "node": ">=14.15.3",
    "npm": ">=6.14.9"
  },
  "scripts": {
    "start": "node ./build/server.js",
    "dev": "ts-node-dev -r tsconfig-paths/register src/app.ts",
    "test": "jest --forceExit --detectOpenHandles --coverage --verbose",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "build": "webpack --config webpack.config.ts",
    "check-updates": "ncu",
    "tdocs": "typedoc --out docs ./src",
    "upgrade": "npm update --save-dev && npm update --save",
    "pkg:win": "npm run build && rimraf pkg && mkdir pkg && pkg package.json --targets node14-win-x64 --output ./pkg/server",
    "pkg:linux": "npm run build && rimraf pkg && mkdir pkg && pkg package.json --target node14-linux-x64 --output ./pkg/server"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nexckycort/backend-architecture-nodejs"
  },
  "bin": "./build/server.js",
  "pkg": {
    "scripts": "server.js"
  },
  "_moduleAliases": {
    "api": "dist/api",
    "config": "dist/config",
    "handlers": "dist/handlers",
    "helpers": "dist/helpers",
    "interfaces": "dist/interfaces",
    "jobs": "dist/jobs",
    "lib": "dist/lib",
    "loaders": "dist/loaders",
    "models": "dist/models",
    "services": "dist/services"
  },
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.0.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "helmet": "^4.4.1",
    "joi": "^17.3.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.11.14",
    "morgan": "^1.10.0",
    "nodemailer": "^6.4.17",
    "pg": "^8.5.1"
  },
  "devDependencies": {
    "@microsoft/tsdoc": "^0.13.0",
    "@tsconfig/node14": "^1.0.0",
    "@types/bcrypt": "^3.0.0",
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.9",
    "@types/express": "^4.17.11",
    "@types/http-errors": "^1.8.0",
    "@types/jest": "^26.0.20",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/morgan": "^1.9.2",
    "@types/node": "^14.14.22",
    "@types/nodemailer": "^6.4.0",
    "@types/pg": "^7.14.9",
    "@types/supertest": "^2.0.10",
    "@types/webpack-node-externals": "^2.5.0",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "dotenv": "^8.2.0",
    "eslint": "^7.19.0",
    "eslint-config-standard-with-typescript": "^20.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-tsdoc": "^0.2.11",
    "git-commit-msg-linter": "^3.0.0",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "npm-check-updates": "^11.1.4",
    "pkg": "^4.4.9",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.0",
    "ts-loader": "^8.0.14",
    "ts-node-dev": "^1.1.1",
    "tsconfig-paths": "^3.9.0",
    "typedoc": "^0.20.25",
    "typescript": "^4.1.3",
    "webpack": "^5.22.0",
    "webpack-cli": "^4.5.0",
    "webpack-node-externals": "^2.5.2"
  }
}
