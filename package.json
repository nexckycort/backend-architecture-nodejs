{
  "name": "backend-architecture-nodejs",
  "version": "1.0.0",
  "author": "Nestor Cortina",
  "description": "",
  "main": "server.js",
  "engines": {
    "node": ">=14.15.3",
    "npm": ">=6.14.9"
  },
  "scripts": {
    "start": "node ./build/server.js",
    "dev": "ts-node-dev -r tsconfig-paths/register src/app.ts",
    "test": "jest --forceExit --detectOpenHandles --coverage --verbose",
    "make-badges": "istanbul-badges-readme",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "build:clean": "rimraf build",
    "compile": "webpack --config webpack.config.ts",
    "postbuild": "ts-node-script scripts/postbuild.ts",
    "build": "npm-run-all build:clean compile postbuild",
    "check-updates": "ncu",
    "tdocs": "typedoc --out docs ./src",
    "upgrade": "npm update --save-dev && npm update --save",
    "pkg:win": "npm run build && rimraf pkg && mkdir pkg && pkg package.json --targets node14-win-x64 --output ./pkg/server",
    "pkg:linux": "npm run build && rimraf pkg && mkdir pkg && pkg package.json --target node14-linux-x64 --output ./pkg/server"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nexckycort/backend-architecture-nodejs"
  },
  "bin": "./build/server.js",
  "pkg": {
    "scripts": "server.js"
  },
  "license": "ISC",
  "dependencies": {
    "colors": "^1.4.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "helmet": "^4.5.0",
    "joi": "^17.4.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@microsoft/tsdoc": "^0.13.2",
    "@tsconfig/node14": "^1.0.0",
    "@types/colors": "^1.2.1",
    "@types/compression": "^1.7.0",
    "@types/copy-webpack-plugin": "^8.0.0",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/fs-extra": "^9.0.11",
    "@types/http-errors": "^1.8.0",
    "@types/jest": "^26.0.23",
    "@types/morgan": "^1.9.2",
    "@types/node": "^15.0.1",
    "@types/supertest": "^2.0.11",
    "@types/webpack-node-externals": "^2.5.1",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "copy-webpack-plugin": "^8.1.1",
    "dotenv": "^8.2.0",
    "esbuild": "^0.11.17",
    "esbuild-node-externals": "^1.2.0",
    "eslint": "^7.25.0",
    "eslint-config-standard-with-typescript": "^20.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-tsdoc": "^0.2.14",
    "fs-extra": "^9.1.0",
    "git-commit-msg-linter": "^3.1.0",
    "husky": "^4.3.8",
    "istanbul-badges-readme": "^1.2.1",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "npm-check-updates": "^11.5.9",
    "npm-run-all": "^4.1.5",
    "pkg": "^5.1.0",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.5",
    "ts-loader": "^9.1.1",
    "ts-node-dev": "^1.1.6",
    "tsconfig-paths": "^3.9.0",
    "typedoc": "^0.20.36",
    "typescript": "^4.2.4",
    "webpack": "^5.36.2",
    "webpack-cli": "^4.6.0",
    "webpack-node-externals": "^3.0.0"
  }
}
